<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        >
    <b:Row addStyleNames="article-row">
        <b:Column size="XS_3">
            <b:Image width="75px" type="ROUNDED" ui:field="articleImage"/>
        </b:Column>
        <b:Column size="XS_9">
            <b:Row>
                <b:Column size="XS_12" ui:field="articleTitle"></b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="XS_12" ui:field="articlePrice"></b:Column>
            </b:Row>
        </b:Column>
    </b:Row>
</ui:UiBinder>